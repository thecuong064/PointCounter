<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#120F2C"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HOME"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_home_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="80sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_home_dec"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cor_20_solid_332dce80"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>
                <Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/btn_home_inc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cor_20_solid_332dce80"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_home_fouls"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:padding="7dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/cor_20_solid_120f2c">

                <View
                    android:id="@+id/view_home_fouls_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <View
                    android:id="@+id/view_home_fouls_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <View
                    android:id="@+id/view_home_fouls_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <View
                    android:id="@+id/view_home_fouls_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <View
                    android:id="@+id/view_home_fouls_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="8dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tv_away_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AWAY"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_away_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0"
                android:textColor="#fff"
                android:textSize="80sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_away_dec"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cor_20_solid_332dce80"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>

                <Space
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/btn_away_inc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/cor_20_solid_332dce80"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_away_fouls"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:padding="7dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/cor_20_solid_120f2c">

                <View
                    android:id="@+id/view_away_fouls_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <View
                    android:id="@+id/view_away_fouls_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <View
                    android:id="@+id/view_away_fouls_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <View
                    android:id="@+id/view_away_fouls_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="match_parent"/>

                <View
                    android:id="@+id/view_away_fouls_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#fff000"
                    android:visibility="invisible"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00 : 00"
            android:textColor="#fff"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_shot_clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="24"
            android:textColor="#fff"
            android:textSize="80sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_play_pause"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cor_20_solid_332dce80"
                android:gravity="center"
                android:text="PLAY"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cor_20_solid_332dce80"
                android:gravity="center"
                android:text="STOP"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/shot_clock_short"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cor_20_solid_332dce80"
                android:gravity="center"
                android:text="14"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/shot_clock_long"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cor_20_solid_332dce80"
                android:gravity="center"
                android:text="24"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>