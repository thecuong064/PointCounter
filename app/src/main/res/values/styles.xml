<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AnimatedButton">
        <item name="android:background">@drawable/scoreboard_btn_bg</item>
        <item name="android:textColor">@drawable/scoreboard_btn_text_color</item>
    </style>

    <style name="AnimatedButton.ScoreboardPoint">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AnimatedButton.ScoreboardTimer">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AnimatedButton.ScoreboardTimer.Breaks">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AnimatedButton.ScoreboardTimer.Danger">
        <item name="android:background">@drawable/scoreboard_btn_bg_danger</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AnimatedButton.Save">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScoreboardTeamFoulsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@drawable/scoreboard_teamfouls_bg</item>
    </style>

    <style name="ScoreboardTeamFoulView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#fff000</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ScoreboardTeamNameTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="PickerButton">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn_bg_a633c37c</item>
    </style>

    <style name="PickerButton.Left">
    </style>

    <style name="PickerButton.Right">
    </style>

    <style name="ShotClockTextView">
        <item name="android:background">@drawable/scoreboard_shotclock_bg</item>
        <item name="android:textColor">@drawable/scoreboard_shotclock_text_color</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="CustomSwitch">
        <item name="thumbTint">@drawable/switch_thumb_color</item>
        <item name="trackTint">@drawable/switch_track_color</item>
    </style>

</resources>